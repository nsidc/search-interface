{
    "env": {
        "browser": true,
        "node": true,
        "es2017": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2020,
        "impliedStrict": true,
        "sourceType": "module"
    },
    "ignorePatterns": ["**/vendor/**/*.js", "**/contrib/**/*.js", "**/spec/**/*.js", "**/deprecated/**/*.js", "**/broken_spec/**/*.js"],
    "rules": {
            "indent": ["error", 4]
    }
}
